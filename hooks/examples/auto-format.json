{
  "name": "Auto-Format Hook",
  "description": "Automatically formats code after Claude edits or creates files",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "npx prettier --write \"$CLAUDE_FILE_PATH\" 2>/dev/null || true"
          }
        ]
      }
    ]
  },
  "notes": {
    "when_to_use": [
      "Projects with Prettier configured",
      "Teams with strict formatting standards",
      "When you don't want to manually run format"
    ],
    "when_not_to_use": [
      "Large files (>1000 lines) - causes delay",
      "Projects without Prettier",
      "When you need to review changes before formatting"
    ],
    "measured_impact": {
      "time_saved": "~5 minutes per hour of coding",
      "token_savings": "None (runs after Claude)",
      "latency_added": "200-500ms per file edit"
    }
  }
}
